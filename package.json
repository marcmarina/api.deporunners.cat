  "license": "ISC",
  "author": "Marc Marina",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "docker:build": "docker build . -t marcmarina/deporunners-api",
    "docker:push": "docker push marcmarina/deporunners-api",
    "lint": "eslint . --ext .ts",
    "mongo:start": "docker run -d -p 27017:27017 --name deporunners_mongo mongo:latest",
    "prepare": "husky install",
    "seed": "ts-node seed.ts",
    "serve": "node dist/index.js",
    "prestart": "yarn install",
    "start": "nodemon --exec ts-node --files src/index.ts",
    "test": "jest --passWithNoTests",
    "verify": "yarn build --noEmit && yarn lint && yarn test"
  },
  "dependencies": {
    "@sentry/node": "^7.0.0",
    "@sentry/tracing": "^7.0.0",
    "bcrypt": "^5.0.0",
    "consolidate": "^0.16.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^16.0.0",
    "excel4node": "^1.7.2",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.18.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.9.28",
    "nodemailer": "^6.4.13",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "pino": "^8.0.0",
    "pino-http": "^8.3.1",
    "pug": "^3.0.0",
    "stripe": "^10.0.0",
    "zod": "^3.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/consolidate": "0.14.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.16",
    "@types/faker": "6.6.8",
    "@types/jest": "29.4.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/lodash": "4.14.191",
    "@types/node": "16.18.8",
    "@types/nodemailer": "6.4.7",
    "@types/pug": "2.0.6",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "eslint": "8.31.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "faker": "5.5.3",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.1",
    "prettier": "2.8.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  }
