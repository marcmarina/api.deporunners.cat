{
  "name": "api.deporunners.cat",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/marcmarina/api.deporunners.cat",
  "license": "ISC",
  "author": "Marc Marina",
  "main": "dist/index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build && tsc",
    "deploy": "ts-node ./src/scripts/deploy",
    "lint": "turbo run lint && eslint --fix --ext .ts src",
    "mongo:start": "docker run -d -p 27017:27017 --name deporunners_mongo mongo:latest",
    "prepare": "husky install",
    "seed": "ts-node ./src/scripts/seed.ts",
    "serve": "node dist/index.js",
    "prestart": "yarn install",
    "start": "nodemon --exec ts-node --files src/index.ts",
    "test": "turbo run test && jest --passWithNoTests",
    "verify": "yarn run build --noEmit && yarn run lint && yarn run test --runInBand"
  },
  "dependencies": {
    "@deporunners/auth": "*",
    "@deporunners/config": "*",
    "@deporunners/database": "*",
    "@deporunners/errors": "*",
    "@deporunners/logger": "*",
    "@deporunners/mail": "*",
    "@deporunners/models": "*",
    "@deporunners/stripe": "*",
    "@deporunners/utils": "*",
    "@sentry/node": "^7.0.0",
    "@sentry/tracing": "^7.0.0",
    "axios": "^1.3.3",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^16.0.0",
    "excel4node": "^1.7.2",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.18.1",
    "express-validator": "^6.6.1",
    "faker": "5.5.3",
    "lodash": "^4.17.21",
    "mongoose": "^5.9.28",
    "pug": "^3.0.0",
    "stripe": "^10.0.0"
  },
  "devDependencies": {
    "@deporunners/eslint-config": "*",
    "@deporunners/jest-config": "*",
    "@deporunners/tsconfig": "*",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/faker": "6.6.8",
    "@types/jest": "29.5.1",
    "@types/lodash": "4.14.194",
    "@types/node": "16.18.24",
    "@types/pug": "2.0.6",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "eslint": "8.39.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.1.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "turbo": "^1.9.3",
    "typescript": "4.9.4"
  }
}
