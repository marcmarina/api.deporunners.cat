{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build", "^test"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "verify": {
      "dependsOn": ["build", "lint", "test"],
      "cache": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
